# Basic settings
PROJECT_NAME=PROJECT_NAME_PLACEHOLDER
ENVIRONMENT=development
SECRET_KEY=your-super-secret-key-here
DEBUG=true

# Server
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=sqlite+aiosqlite:///./PROJECT_NAME_PLACEHOLDER.db
# For PostgreSQL:
# DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/database_name
# POSTGRES_SERVER=localhost
# POSTGRES_USER=username
# POSTGRES_PASSWORD=password
# POSTGRES_DB=database_name
# POSTGRES_PORT=5432
DATABASE_ECHO=false

# Redis
REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=optional-password

# CORS
BACKEND_CORS_ORIGINS=["http://localhost:3000","https://localhost:3000","http://localhost:8080","https://localhost:8080"]
ALLOWED_HOSTS=["localhost","127.0.0.1"]

# Authentication
ACCESS_TOKEN_EXPIRE_MINUTES=480
REFRESH_TOKEN_EXPIRE_MINUTES=43200
ALGORITHM=HS256

# Email
SMTP_TLS=true
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-email-password
EMAILS_FROM_EMAIL=noreply@PROJECT_NAME_PLACEHOLDER.com
EMAILS_FROM_NAME=PROJECT_NAME_PLACEHOLDER

# Superuser
FIRST_SUPERUSER_EMAIL=admin@PROJECT_NAME_PLACEHOLDER.com
FIRST_SUPERUSER_PASSWORD=changethis

# External APIs
EXTERNAL_API_KEY=your-api-key
EXTERNAL_API_URL=https://api.example.com

# AI/LangFlow Configuration
LANGFLOW_URL=http://localhost:7860
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# Vector Database
CHROMA_PERSIST_DIRECTORY=./vector_store
EMBEDDINGS_MODEL=text-embedding-3-small

# Document Processing
DOCUMENTS_PATH=./documents
SUPPORTED_FILE_TYPES=["pdf","txt","docx","md"]
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# LLM Configuration
DEFAULT_LLM_MODEL=gpt-3.5-turbo
DEFAULT_LLM_TEMPERATURE=0.7
DEFAULT_LLM_MAX_TOKENS=1500

# File uploads
UPLOAD_FOLDER=uploads
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=["jpg","jpeg","png","gif","pdf","txt","doc","docx"]

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_CALLS=100
RATE_LIMIT_PERIOD=60

# Monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json