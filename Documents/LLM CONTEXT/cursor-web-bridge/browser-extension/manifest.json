{
  "manifest_version": 3,
  "name": "Cursor Web Bridge",
  "version": "0.1.0",
  "description": "Send element-aware prompts from localhost pages to Cursor.",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": [
    "http://localhost/*",
    "https://localhost/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": ["content-script.js"],
      "run_at": "document_idle"
    }
  ]
}
